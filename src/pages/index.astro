---
import Layout from '../layouts/Layout.astro';
import Navigator from '../components/Navigator.astro';
import { CountDown } from '../components/CountDown';
---

<Layout title="Creator Awards">
    <Navigator />
    <main class="flex flex-col items-center justify-center gap-7" style="height: calc(100vh - (130px*2))">
		<div class="absolute -z-10 opacity-30">
			<img src="/logo_final_ca.png" />
		</div>
		<h3 class="text-4xl">Algo grande est√° en camino!</h3>
        <CountDown client:load />
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1rem;
        width: 1000px;
        max-width: calc(100% - 2rem);
        color: white;
    }

    h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
    }
</style>
