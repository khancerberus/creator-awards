---
import Logo from './Logo.astro';
import TwitchButton from './TwitchButton.astro';
---

<nav class="flex justify-between items-center w-full px-4">
    <a href="/" class="text-white" id="brand">
        <Logo />
    </a>

    <div class="flex md:hidden">
        <button class="text-white" id="toggle-button">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>
    </div>

    <div class="hidden md:flex flex-col md:flex-row justify-center md:justify-end self-center items-center gap-4 top-32 absolute left-0 md:static transition-all duration-200 w-full md:w-auto py-3" id="navbar-default">
        <a href="/" class="text-white">NOTICIAS</a>
        <a href="/" class="text-white">EVENTO</a>
        <a href="/" class="text-white">ACERCA DE</a>
        <TwitchButton />
    </div>
</nav>
<style>
    nav {
        width: 800px;
        /* max-width: calc(100% - 2rem); */
        height: 130px;
    }
</style>

<script>
    function onToggle() {
        const navbar = document.getElementById('navbar-default');
        navbar?.classList.toggle('hidden');
        navbar?.classList.toggle('flex');

        console.log('toggle');
    }
    const $toggleButton = document.querySelector('button');
    $toggleButton?.addEventListener('click', onToggle);
</script>
